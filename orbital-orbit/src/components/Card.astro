---
import "../styles/global.css"
interface Props {
	name: string;
	img?: string;
	body?: string;
	href?: string;
	ref?: string;
}

const { name, body, img } = Astro.props;
---

<li class="link-card">
	<a href={name}>
		{img && <img src={img}>}
		<h2>
			{name}
			<span>&rarr;</span>
		</h2>
		<p>
			{body}
		</p>
	</a>
</li>
