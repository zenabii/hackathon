---
import "../styles/global.css"
interface Props {
	id: string;
	name: string;
	img: string;
	body?: string;
	href?: string;
	ref?: string;
}

const { id, name, body, img } = Astro.props;
---

<li class="link-card">
	<a href={id}>
		
		<img src={img} alt="test img" width="100px"/>
		<h2>
			{name}
			<span>&rarr;</span>
		</h2>
		<p>
			{body}
		</p>
	</a>
</li>
